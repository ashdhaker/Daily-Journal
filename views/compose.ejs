<h1>Compose</h1>
<form action="/compose" method="POST">

    <div class="form-group">
    <h4>Title</h4>
    <input class="form-control" type="text" name="postitle">
    </div>
    
    <div class="form-group">
    <h4>Post</h4>
    <textarea class="form-control" name="postwritten" style="resize: none;" cols="40" rows="5"></textarea>
    </div>
    
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

